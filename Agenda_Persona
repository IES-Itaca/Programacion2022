public class Persona {
    String dni;
    static String nombre;
    static String apellido;
    static String tlf;
    static String curso;
    static String edad;
    static int contador;
    public Persona(){
        dni="";
        nombre="";
        apellido="";
        tlf="";
        curso="";
        edad="";
        contador=0;
    }
    public Persona(String d,String n,String a,String t,String c, String e){
        dni=d;
        nombre=n;
        apellido=a;
        tlf=t;
        curso=c;
        edad=e;
        contador++;
    }
    public String datos(){
        return dni+";"+nombre+";"+apellido+";"+tlf+";"+curso+";"+edad;
    }
    public String dni(){
        return dni;
    }
}
